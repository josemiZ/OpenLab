<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ConstraintSet android:id="@+id/iv_start">
        <Constraint android:id="@+id/iv_logo" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/iv_end">
        <Constraint android:id="@+id/iv_logo" />
    </ConstraintSet>
    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@id/iv_end"
        app:constraintSetStart="@id/iv_start"
        app:duration="3000">
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:framePosition="25"
                app:motionTarget="@+id/iv_logo" />
            <KeyAttribute
                android:scaleX="1.0"
                android:scaleY="1.0"
                app:framePosition="50"
                app:motionTarget="@+id/iv_logo" />
            <KeyAttribute
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:framePosition="75"
                app:motionTarget="@+id/iv_logo" />
            <KeyAttribute
                android:scaleX="1.0"
                android:scaleY="1.0"
                app:framePosition="100"
                app:motionTarget="@+id/iv_logo" />
        </KeyFrameSet>
    </Transition>

</MotionScene>